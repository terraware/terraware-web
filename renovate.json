{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":preserveSemverRanges"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["every weekend"],
      "stabilityDays": 3
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"],
      "schedule": ["every weekend"],
      "stabilityDays": 3
    }
  ]
}
